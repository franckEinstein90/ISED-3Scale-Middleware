  </div>
</p>
</form>
</div>

  {{>userGroups/tableDisplay}}

</div>

<script>
$('#selectAllTenants').click(function(event){
  event.preventDefault()
  $('.tenantFilterCheckBox').prop('checked', true)
})

$('#unSelectAllTenants').click(function(event){
  event.preventDefault()
  $('.tenantFilterCheckBox').prop('checked', false)
})



</script>

