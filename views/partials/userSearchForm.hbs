<form>
    class="w3-container w3-card-4">
    <label class="w3-text-blue"><b>email pattern</b></label>
    <input class="w3-input w3-border" id="userEmail" type="text"></p>



  <div class="w3-row">
  <div class="w3-col m4 l4 w3-left-align">
  <label class="w3-text-blue"><b>TENANTS (OR)</b></label>
  <br/>
        <button id="selectAllTenants">select all</button>
        <button id="unselectAllTenants">unselect all</button>
        <br/>

	{{#each tenants}}
        <input class="w3-check tenantFilterCheckBox" id='{{this.name}}SearchSelect' type="checkbox">
        <label class="w3-text-blue">{{this.name}}</label>
        <br/>
	{{/each}}
  </div>

   <div class="w3-col m4 l4 w3-left-align">
   <label class="w3-text-yellow"><b>PROPERTIES (AND)</b></label>
   <BR/>
        <input class="w3-check" id='providerAccountSearchSelect' type="checkbox" checked="checked">
        <label class="w3-text-deep-orange">Provider Accounts</label>

        <P>

        <label class='w3-text-yellow'>KeyCloak</label>
        <BR/>

        <input class="w3-check" id='otpNotEnabledSelect' type="checkbox" checked="checked">
        <label class="w3-text-deep-orange">OTP Not Enabled</label>

        <br/>
        <input class="w3-check" id='keyCloakAccountSelect' type="checkbox" checked='checked'>
        <label class="w3-text-deep-orange">KeyCloak account</label>
   <br/>
</div>

<div class="w3-col m4 l4 w3-left-align">
   <label class="w3-text-blue"><b>Existing Groups</b></label>
   <table>
     <tbody id="userGroupsList">

     </tbody>
   </table>
   <br/>
</div>

<br/>
<p style='padding-top:15px'>
    <div class="w3-row" style='margin:15,15,15,15'>
        <br/>
    <button class="w3-btn w3-blue w3-block" id="createNewGroup" >create</button>
    </div>
</p>

</div>

</form>

<script>
  $('#selectAllTenants').click(function(event){
    event.preventDefault()
    $('.tenantFilterCheckBox').prop('checked', true)
  })

  $('#unSelectAllTenants').click(function(event){
    event.preventDefault()
    $('.tenantFilterCheckBox').prop('checked', false)
  })



</script>

