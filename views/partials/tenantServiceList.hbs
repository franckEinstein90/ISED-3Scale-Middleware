<table id='{{this.name}}ServicesTable' class="display">

    <thead>
        <tr>

            <th>ID</th>
	    <th>name</th>
            <th>Billingual Doc</th>
	    <th>Date Created</th>
	    <th>Date Updated</th>

        </tr>
    </thead>
    <tbody>
		{{#each services}}
        <tr>
	    <td>{{this.id}}</td>
	    <td>{{this.name}}</td>
			<td>
                {{#if this.bilingualDoc}}
				 	yes
                {{else}}
                    no
                {{/if}}
			</td>
	<td> {{this.created}}</td>
	<td> {{this.updated}}</td>
	
        </tr>
		{{/each}}
    </tbody>

</table>

<script>
		$('#{{this.name}}ServicesTable').DataTable({
            searching: false, 
            lengthChange: false
        })
</script>
